      </form>
      <% } else { %>
        <form class="form-inline" method = "POST" action = '/login'>
          <label class="sr-only" for="username">Username</label>
          <input type="text" class="form-control" name="username" placeholder="Username" style = 'margin: 0 1em 0 1em'>
          <button class="btn btn-outline-dark float-right" type="submit">Login</button>
        </form>
    <% } %>
  </nav>
